<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="@dimen/small_margin">
    <TextView
        style="@style/title"
        android:textSize="@dimen/text_size_question"
        android:textAlignment="center"
        android:text="@string/label_main_title" />

    <ImageView style="@style/java_icon"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal" />

        <View
            style="@style/view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/title"
                android:textSize="@dimen/text_size_question"
                android:text="@string/label_current_player" />

            <TextView
                style="@style/title"
                android:id="@+id/lbl_player"
                android:textSize="@dimen/text_size_question" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            style="@style/button"
            android:id="@+id/final_score"
            android:layout_weight="1"
            android:onClick="submitScore"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/submit_button" />

            <Button
                android:id="@+id/go_to_main_menu"
                android:layout_weight="1"
                style="@style/button"
                android:text="@string/btn_back_to_main_menu" />

        </LinearLayout>
    </LinearLayout>

